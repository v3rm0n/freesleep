{
	"format_on_save": "on",
	"lsp": {
		"deno": {
			"settings": {
				"deno": {
					"enable": true
				}
			}
		},
		"biome": {
			"settings": {
				"require_config_file": true
			}
		}
	},
	"languages": {
		"JavaScript": {
			"language_servers": [
				"deno",
				"!typescript-language-server",
				"!vtsls",
				"!eslint"
			],
			"formatter": {
				"language_server": {
					"name": "biome"
				}
			},
			"format_on_save": "on",
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			}
		},
		"TypeScript": {
			"language_servers": [
				"deno",
				"!typescript-language-server",
				"!vtsls",
				"!eslint"
			],
			"formatter": {
				"language_server": {
					"name": "biome"
				}
			},
			"format_on_save": "on",
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			}
		},
		"JSX": {
			"language_servers": [
				"deno",
				"!typescript-language-server",
				"!vtsls",
				"!eslint"
			],
			"formatter": {
				"language_server": {
					"name": "biome"
				}
			},
			"format_on_save": "on",
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			}
		},
		"TSX": {
			"language_servers": [
				"deno",
				"!typescript-language-server",
				"!vtsls",
				"!eslint"
			],
			"formatter": {
				"language_server": {
					"name": "biome"
				}
			},
			"format_on_save": "on",
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			}
		}
	}
}
